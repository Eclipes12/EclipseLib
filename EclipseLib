local CustomUILib = {}

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

-- Create the Main Window
function CustomUILib:CreateWindow(options)
    local window = {}
    options = options or {}
    local windowTitle = options.Name or "Custom UI Library"
    
    -- Create the main UI
    local ScreenGui = Instance.new("ScreenGui", game.Players.LocalPlayer:WaitForChild("PlayerGui"))
    local MainFrame = Instance.new("Frame")
    local Panel = Instance.new("Frame")
    local Title = Instance.new("TextLabel")
    local CloseButton = Instance.new("TextButton")

    -- UI Properties
    ScreenGui.Name = "CustomUILib"
    MainFrame.Name = "MainFrame"
    MainFrame.Parent = ScreenGui
    MainFrame.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    MainFrame.Size = UDim2.new(0, 500, 0, 400)
    MainFrame.Position = UDim2.new(0.3, 0, 0.2, 0)

    Panel.Name = "Panel"
    Panel.Parent = MainFrame
    Panel.BackgroundColor3 = Color3.fromRGB(39, 39, 39)
    Panel.Size = UDim2.new(1, 0, 0, 40)

    Title.Name = "Title"
    Title.Parent = Panel
    Title.Text = windowTitle
    Title.Font = Enum.Font.SourceSansBold
    Title.TextScaled = true
    Title.Size = UDim2.new(0.8, 0, 1, 0)
    Title.Position = UDim2.new(0.05, 0, 0, 0)
    Title.TextColor3 = Color3.fromRGB(252, 252, 252)

    CloseButton.Name = "CloseButton"
    CloseButton.Parent = Panel
    CloseButton.Size = UDim2.new(0, 40, 1, 0)
    CloseButton.Position = UDim2.new(0.9, 0, 0, 0)
    CloseButton.Text = "X"
    CloseButton.Font = Enum.Font.SourceSansBold
    CloseButton.TextColor3 = Color3.fromRGB(222, 9, 37)
    CloseButton.MouseButton1Click:Connect(function()
        ScreenGui:Destroy()
    end)

    -- Tab Container
    local TabContainer = Instance.new("Frame")
    TabContainer.Name = "TabContainer"
    TabContainer.Parent = MainFrame
    TabContainer.BackgroundColor3 = Color3.fromRGB(42, 42, 42)
    TabContainer.Size = UDim2.new(0.25, 0, 1, -40)
    TabContainer.Position = UDim2.new(0, 0, 0, 40)

    local TabContent = Instance.new("Frame")
    TabContent.Name = "TabContent"
    TabContent.Parent = MainFrame
    TabContent.BackgroundColor3 = Color3.fromRGB(47, 47, 47)
    TabContent.Size = UDim2.new(0.75, 0, 1, -40)
    TabContent.Position = UDim2.new(0.25, 0, 0, 40)

    window.Tabs = {}
    window.TabContent = TabContent

    -- Add Tabs
    function window:CreateTab(tabOptions)
        local tab = {}
        tabOptions = tabOptions or {}
        local tabName = tabOptions.Name or "Tab"
        
        -- Tab Button
        local TabButton = Instance.new("TextButton")
        TabButton.Name = tabName
        TabButton.Parent = TabContainer
        TabButton.Text = tabName
        TabButton.Size = UDim2.new(1, 0, 0, 30)
        TabButton.BackgroundColor3 = Color3.fromRGB(42, 42, 42)
        TabButton.TextColor3 = Color3.fromRGB(255, 255, 255)
        TabButton.Font = Enum.Font.SourceSansBold
        TabButton.TextSize = 14

        -- Tab Content
        local TabFrame = Instance.new("Frame")
        TabFrame.Name = tabName
        TabFrame.Parent = TabContent
        TabFrame.Size = UDim2.new(1, 0, 1, 0)
        TabFrame.BackgroundColor3 = Color3.fromRGB(47, 47, 47)
        TabFrame.Visible = false

        -- Toggle Tab Visibility
        TabButton.MouseButton1Click:Connect(function()
            for _, otherTab in pairs(window.Tabs) do
                otherTab.Frame.Visible = false
            end
            TabFrame.Visible = true
        end)

        tab.Frame = TabFrame

        -- Add Buttons to the Tab
        function tab:CreateButton(buttonOptions)
            buttonOptions = buttonOptions or {}
            local buttonText = buttonOptions.Name or "Button"
            local callback = buttonOptions.Callback or function() end
            
            local Button = Instance.new("TextButton")
            Button.Parent = TabFrame
            Button.Text = buttonText
            Button.Size = UDim2.new(0.8, 0, 0, 30)
            Button.Position = UDim2.new(0.1, 0, #TabFrame:GetChildren() * 40 / TabFrame.AbsoluteSize.Y, 0)
            Button.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
            Button.TextColor3 = Color3.fromRGB(255, 255, 255)
            Button.Font = Enum.Font.SourceSansBold
            Button.TextSize = 14

            Button.MouseButton1Click:Connect(function()
                callback()
            end)
        end

        table.insert(window.Tabs, tab)
        return tab
    end

    return window
end

return CustomUILib
